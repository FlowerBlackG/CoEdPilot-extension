{
  "name": "edit-pilot",
  "displayName": "Edit Pilot",
  "description": "A code co-edit helper.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:go",
    "onLanguage:java"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration":[
      {
        "title": "Edit Pilot",
        "properties": {
          "editPilot.queryURL": {
            "type": "string",
            "default": "http://localhost:5001",
            "description": "The backend URL to send query request to."
          },
          "editPilot.predictLocationOnEditAcception": {
            "type": "boolean",
            "default": "true",
            "description": "Perform another prediction immediately when accpeting an edit."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "editPilot.inputMessage",
        "category": "Edit Pilot",
        "title": "Change Commit Message"
      },
      {
        "title": "Last Suggestion",
        "category": "Edit Pilot",
        "command": "editPilot.last-suggestion",
        "icon": "$(arrow-left)"
      },
      {
        "title": "Next Suggestion",
        "category": "Edit Pilot",
        "command": "editPilot.next-suggestion",
        "icon": "$(arrow-right)"
      },
      {
        "title": "Accept",
        "category": "Edit Pilot",
        "command": "editPilot.accept-edit",
        "icon": "$(pass)"
      },
      {
        "title": "Dismiss",
        "category": "Edit Pilot",
        "command": "editPilot.dismiss-edit",
        "icon": "$(trash)"
      },
      {
        "title": "Predict Locations",
        "category": "Edit Pilot",
        "command": "editPilot.predictLocations"
      },
      {
        "title": "Generate Edits",
        "category": "Edit Pilot",
        "command": "editPilot.generateEdits"
      },
      {
        "title": "Show Commands",
        "command": "editPilot.showCommands"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "editPilot.inputMessage",
          "group": "editPilot@3",
          "when": "editorFocus"
        },
        {
          "command": "editPilot.predictLocations",
          "group": "editPilot@1",
          "when": "editorFocus"
        },
        {
          "command": "editPilot.generateEdits",
          "group": "editPilot@2",
          "when": "editorFocus"
        }
      ],
      "editor/title": [
        {
          "command": "editPilot.last-suggestion",
          "group": "navigation@-4",
          "when": "editPilot:isEditDiff"
        },
        {
          "command": "editPilot.next-suggestion",
          "group": "navigation@-3",
          "when": "editPilot:isEditDiff"
        },
        {
          "command": "editPilot.accept-edit",
          "group": "navigation@-2",
          "when": "editPilot:isEditDiff"
        },
        {
          "command": "editPilot.dismiss-edit",
          "group": "navigation@-1",
          "when": "editPilot:isEditDiff"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "editPilot",
          "title": "Edit Pilot",
          "icon": "$(edit)"
        }
      ]
    },
    "views": {
      "editPilot": [
        {
          "id": "editLocations",
          "name": "Suggested Locations",
          "contextualTitle": "Edit Pilot"
        }
      ]
    },
    "keybindings": [
      {
        "command": "editPilot.predictLocations",
        "key": "ctrl+alt+l",
        "mac": "cmd+alt+l"
      },
      {
        "command": "editPilot.generateEdits",
        "key": "ctrl+alt+e",
        "mac": "cmd+alt+e",
        "when": "editorFocus"
      }
    ]
  },
  "scripts": {
    "test": "node ./test/suite/test.js",
    "watch": "tsc --watch --allowJs -p jsconfig.json"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.78.0",
    "@vscode/test-electron": "^2.3.0",
    "axios": "^1.6.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@types/diff": "^5.0.8",
    "@vscode/test-cli": "^0.0.4",
    "diff": "^5.1.0",
    "vscode-languageserver": "^8.1.0"
  }
}
