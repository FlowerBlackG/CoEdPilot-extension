{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
		"lib": ["ES2020"],
        "outDir": "out",
        "sourceMap": true,
		"noEmit": false,
        "rootDir": "src",
        "strict": true, 
        "noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"]
}
